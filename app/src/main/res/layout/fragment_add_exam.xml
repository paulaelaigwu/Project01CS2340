<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativeLayoutExam"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/etCourseCode"
        android:layout_width="384dp"
        android:layout_height="55dp"
        android:layout_margin="16dp"
        android:hint="@string/exam_course_id"
        app:layout_constraintBottom_toTopOf="@+id/etExamName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        android:autofillHints="" />

    <EditText
        android:id="@+id/etExamName"
        android:layout_width="384dp"
        android:layout_height="55dp"
        android:layout_margin="16dp"
        android:hint="@string/exam_name2"
        app:layout_constraintBottom_toTopOf="@+id/etDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etCourseCode"
        app:layout_constraintVertical_bias="0.5" />

    <EditText
        android:id="@+id/etDate"
        android:layout_width="384dp"
        android:layout_height="55dp"
        android:layout_margin="16dp"
        android:hint="@string/exam_date"
        app:layout_constraintBottom_toTopOf="@+id/etTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etExamName"
        app:layout_constraintVertical_bias="0.5" />

    <EditText
        android:id="@+id/etTime"
        android:layout_width="384dp"
        android:layout_height="55dp"
        android:layout_margin="16dp"
        android:hint="@string/exam_time"
        app:layout_constraintBottom_toTopOf="@+id/etLocation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etDate"
        app:layout_constraintVertical_bias="0.5" />

    <EditText
        android:id="@+id/etLocation"
        android:layout_width="384dp"
        android:layout_height="55dp"
        android:layout_margin="16dp"
        android:hint="@string/exam_location"
        app:layout_constraintBottom_toTopOf="@+id/btnSaveExam"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etTime"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/btnSaveExam"
        android:layout_width="127dp"
        android:layout_height="59dp"
        android:layout_gravity="bottom"
        android:layout_marginStart="236dp"
        android:layout_marginTop="424dp"
        android:text="@string/exam_save"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnCancelExam"
        android:layout_width="127dp"
        android:layout_height="57dp"
        android:layout_gravity="bottom"
        android:text="@string/exam_cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnSaveExam"
        app:layout_constraintHorizontal_bias="0.442"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etLocation"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>
